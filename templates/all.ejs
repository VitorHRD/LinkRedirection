<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Links</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
 
<body>
    <div class="container">
        <h1>Links</h1>
        <a href="/add">Adicionar link</a>
        <% for(let i=0 ; i< links.length ; i++){ %>

            <div class="card p-3 mb-3" id="<%=links[i]._id%>">
                <form class="d-flex  align-items-center justify-content-between">
                    <div class="d-flex  flex-column">
                        <h2>
                            <%=links[i].title%>
                        </h2>
                        <h6>
                            <%=links[i].description%>
                        </h6>
                        <div><a class=" text-muted text-decoration-none" href="http://localhost:3000/<%=links[i].title%> ">
                                <%=links[i].url%>
                            </a></div>
                            <div class="text-info d-flex align-items-center" >
                                <i class="material-icons">
                                bar_chart</i>Clicks:  <%=links[i].click%>
                            
                            </div>
                    </div>
                    <div class="d-flex flex-column">
                        <a  class="btn btn-info mb-2 p-2 text-white"href="/edit/<%=links[i]._id%>">Edit</a>
                        <button class="btn btn-danger p-2" style="width: 100px;" onclick="deleteLink('<%=links[i]._id%>')">Delete</button>
                    </div>
                    
                </form>
                </div>
                <%}%>
    </div>
    <script>
        function deleteLink(id) {
            fetch('/' + id, { method: 'DELETE' }).then(res => {
                if (res.status == 200) {
                    res.text().then(linkId => {
                        console.log(linkId)
                        document.getElementById(linkId).remove();

                    })
                }
                else if (res.status == 404) {
                    res.json().then(err => {
                        alert("link nÃ£o encontrado")
                    })
                }
                else {
                    res.json().then(err => {
                        alert(err.message)
                    })
                }
            })
        }
    </script>
</body>

</html>